<%- include('../Partials/header.ejs') %>
<body>
  <%- include('../Partials/navbar.ejs') %>
  <div class="container quiz">
      <div class="row">
          <h1><%= pergunta.titulo %> </h1>
          <p><%= pergunta.descricao %> </p>
      </div>
      <% if(respostas != 0){ %> 
        <div class="row">
          <h4>Respostas:</h4>
          <% respostas.forEach(data => { %>
            <div class="card mb-4">
              <div class="card-body">
                <%= data.resposta %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>Poxa, parece que ainda n√£o existe nenhuma resposta ... </p> 
      <% } %> 
      
    <hr/>
    <div class="card">
      <div class="card-header">
        <h3>Responda</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/save-response">
          <label>Resposta:</label><br /><br />
          <textarea name="resposta" placeholder="Digite sua resposta" class="form-control"></textarea><br/>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button class="btn btn-success">Responder</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('../Partials/footer.ejs') %>
